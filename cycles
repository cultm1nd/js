    <script>
        function count()
        {
            var a=parseInt(document.getElementById('n1').value);
            var b=parseInt(document.getElementById('n2').value);
            var min=999999999999;
            var c=1;
            for(var i=2;i<=a;i++)
            {
              if(a%i==0&&b%i==0)
              {
                if(i<min)
                 {
                    min=i;
                 }
              }
            }
            document.getElementById('total').innerHTML="НОК= "+ min+'<br';
         

}
    </script>
