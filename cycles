    <input type="button" onclick="count();" value="найти">
    <p id="total"></p>
    <script>
        function count()
        {
      var n=parseInt(document.getElementById('n').value);
      for(var i=1;i<=n;i++)
      {
        if (i % 5 == 0)
        {
            document.getElementById('total').innerHTML+=i+'<br>';
        }
      }
        }
    </script>
