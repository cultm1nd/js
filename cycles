            function count(){
                document.getElementById("ress").innerHTML= "Введенные числа =  ";
                var s = document.getElementById("num").value;
                var pr=1;
                var arr = s.split(/[.,,," ", /]/);
                for(var i=0; i<=arr.length;i++){

                    if(parseInt(arr[i])>0){
                             document.getElementById("ress").innerHTML+=arr[i] + " ";
